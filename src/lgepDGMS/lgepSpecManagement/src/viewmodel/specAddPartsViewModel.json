{
    "schemaVersion": "1.0.0",
    "imports": [
        "js/aw-button.directive", 
        "js/aw-default-cell.directive",
        "js/aw-flex-row.directive",
        "js/aw-list.directive",
        "js/aw-panel-body.directive",
        "js/aw-panel-footer.directive",
        "js/aw-popup2.directive",
        "js/aw-textbox.directive"
    ],
    "actions" :{
        "closePopupWindow": {
            "actionType": "JSFunction",
            "method": "hide",
            "inputData": {
                "popupId": "{{data.popupId}}"
            },
            "deps": "js/popupService"
        },
        "loadHomeList": {
            "actionType": "JSFunction",
            "method": "loadHomeList",
            "inputData": {
                "data": "{{data}}",
                "ctx": "{{ctx}}"
            },
            "outputData": {
                "homeList": "homeList",
                "findAllItemProps" : "findAllItemProps"
            },
            "deps": "js/SpecManagementService"
        },
        "getDataProvider": {
            "actionType": "dataProvider",
            "methods": [
                "searchAllList"
            ]
        },
        "loadAllList": {
            "actionType":"JSFunction",
            "method":"loadAllList",
            "inputData": {
                "data":"{{data}}"
            },
            "outputData": {
                "searchAllResponse":"{{function:allList}}",
                "allTotalFound":"allTotalFound"
            },
            "deps": "js/SpecManagementService"
        },
        "applyPartsTxtbox": {
            "actionType":"JSFunction",
            "method":"applyPartsTxtbox",
            "inputData": {
                "data":"{{data}}"
            },
            "deps": "js/SpecManagementService"
        },
        "initializeJob": {
            "actionType": "batchJob",
            "steps": [
                {
                    "action": "loadHomeList"
                },
                {
                    "action": "getDataProvider"
                }
            ]
        },
        "partsResetAndOpen": {
            "actionType": "batchJob",
            "steps": [
                {
                    "action": "partsAddNameReset"
                },
                {
                    "action": "specAddPopup"
                }
            ]
        },
        "specAddPopup": {
            "actionType": "JSFunction",
            "method": "show",
            "inputData": {
                "data": {
                    "declView": "popupSpecAdd",
                    "locals": {
                        "caption": "ADD POPUP"
                    },
                    "options": {
                        "reference": "addId",
                        "isModal": true,
                        "clickOutsideToClose": true,
                        "draggable": true,
                        "placement": "center",
                        "width": 700,
                        "height": 900
                    }
                }
            },
            "outputData": {
                "popupId": "addId"
            },
            "deps": "js/popupService"
        },
        "addModel": {
            "actionType": "JSFunction",
            "method": "addModel",
            "deps": "js/SpecManagementService"
        },
        "partsAddNameReset": {
            "actionType": "JSFunction",
            "method": "partsAddNameReset",
            "deps": "js/SpecManagementService"
        },
        "loadAddData": {
            "actionType":"JSFunction",
            "method":"loadAddData",
            "inputData": {
                "data":"{{data}}"
            },
            "deps": "js/SpecManagementService"
        },
        "openAddModel": {
            "actionType": "batchJob",
            "steps": [
                {
                    "action": "specAddPopup"
                },
                {
                    "action": "loadAddData"
                }
            ]
        },
        "sendRef_Model": {
            "actionType":"JSFunction",
            "method":"sendRef_Model",
            "deps": "js/SpecManagementService"
        },
        "sendRef_Parts": {
            "actionType":"JSFunction",
            "method":"sendRef_Parts",
            "deps": "js/SpecManagementService"
        },
        "pagination": {
            "actionType": "JSFunction",
            "method": "pagination",
            "inputData": {
                "data":"{{data}}"
            },
            "deps": "js/SpecManagementService"
        },
        "clickPageNum": {
            "actionType": "JSFunction",
            "method": "clickPageNum",
            "inputData": {
                "data": "{{data}}"
            },
            "deps": "js/SpecManagementService"
        },
        "clickPrevBtn": {
            "actionType": "JSFunction",
            "method": "clickPrevBtn",
            "inputData": {
                "data": "{{data}}"
            },
            "deps": "js/SpecManagementService"
        },
        "clickNextBtn": {
            "actionType": "JSFunction",
            "method": "clickNextBtn",
            "inputData": {
                "data": "{{data}}"
            },
            "deps": "js/SpecManagementService"
        },
        "clickPageBtn":{
            "actionType":"Event",
            "method":"Event",
            "inputData":
            {
                "events":
                [
                    {
                        "name":"click.page"
                    }
                ]
            }
        }
    },
    "data": {        
        "ref_PartsTxtBox": {
            "displayName": "{{i18n.addParts}}",
            "type": "STRING",
            "isRequired": "false",
            "isEditable": "true",
            "dbValue": "",
            "dispValue": ""
        },
        "pageNum": {
            "type": "STRING",
            "dbValue": []
        },
        "backBtn": {
            "displayName": "<",
            "type": "STRING",
            "isRequired": "false"
        },
        "nextBtn": {
            "displayName": ">",
            "type": "STRING",
            "isRequired": "false"
        }
    },
    "dataProviders": {
        "searchAllList": {
            "action":"loadAllList",
            "response":"{{data.searchAllResponse}}",
            "totalFound": "{{data.allTotalFound}}"
        }
    },
    "functions": {        
        "allList":{
            "functionName": "allList",
            "parameters": [
                "{{data}}"
            ]
        }
    },
    "i18n": {
        "addBtn": ["lgepSpecManagementMessages"],
        "close": ["lgepSpecManagementMessages"],
        "addParts": ["lgepSpecManagementMessages"],
        "list": ["lgepSpecManagementMessages"]
    },
    "onEvent": [
        {
            "eventId": "specAddModel.contentLoaded",
            "action": "loadHomeList"
        },
        {
            "eventId": "searchAllList.resetScroll",
            "action": "pagination"
        },
        {
            "eventId": "click.page",
            "action": "clickPageNum",
            "cacheEventData": true
        },
        {
            "eventId": "searchAllList.selectionChangeEvent",
            "action": "applyPartsTxtbox"
        }
    ],
    "lifecycleHooks": {
        "onInit": "initializeJob"
    }
}