{
    "schemaVersion": "1.0.0",
    "imports": [
        "js/aw-button.directive",
        "js/aw-panel-body.directive",
        "js/aw-panel-footer.directive",
        "js/aw-popup2.directive",
        "js/aw-textbox.directive"
    ],
    "actions": {
        "popupCheck": {
            "actionType": "JSFunction",
            "method": "popupCheck",
            "outputData": {
                "popupState": "popupState"
            },
            "deps": "js/sequenceService"
        },
        "treeManagement": {
            "actionType": "JSFunction",
            "method": "show",
            "inputData": {
                "data": {
                    "declView": "treeManagementPopup",
                    "locals": {
                        "caption": "공통 트리관리"
                    },
                    "options": {
                        "reference": "referenceId",
                        "isModal": true,
                        "clickOutsideToClose": false,
                        "draggable": true,
                        "placement": "bottom-start",
                        "width": 550,
                        "height": 700
                    }
                }
            },
            "deps": "js/popupService"
        },
        "createObject": {
            "actionType": "JSFunction",
            "method": "createObject",
            "inputData": {
                "data": "{{data}}"
            },
            "outputData": {
                "state": "state"
            },
            "deps": "js/sequenceService"
        },
        "closePopupWindow": {
            "actionType": "JSFunction",
            "method": "hide",
            "inputData": {
                "popupId": "{{data.popupId}}"
            },
            "deps": "js/popupService"
        },
        "createStateAc": {
            "actionType": "batchJob",
            "steps": [
                {
                    "action": "createObject"
                },
                {
                    "condition": "conditions.state",
                    "action": "closePopupWindow"
                },
                {
                    "condition": "conditions.state",
                    "action": "treeManagement"
                }
            ]
        },
        "closeBat": {
            "actionType": "batchJob",
            "steps": [
                {
                    "action": "popupCheck"
                },
                {
                    "action": "closePopupWindow"
                },
                {
                    "condition": "conditions.popup",
                    "action": "treeManagement"
                }
            ]
        }
    },
    "data": {
        "containerName": {
            "type": "STRING",
            "uiValue": ""
        },
        "objName": {
            "displayName": "이름",
            "type": "STRING",
            "isRequired": "false",
            "isEditable": "true",
            "dbValue": "",
            "dispValue": ""
        },
        "objDesc": {
            "displayName": "설명",
            "type": "STRING",
            "isRequired": "false",
            "isEditable": "true",
            "dbValue": "",
            "dispValue": ""
        }
    },
    "conditions": {
        "state": {
            "expression": "data.state=='2'"
        },
        "popup": {
            "expression": "data.popupState===true"
        }
    },
    "i18n": {
        "ok": ["lgepDesignSequenceMessages"],
        "close": ["lgepDesignSequenceMessages"]
    }
}